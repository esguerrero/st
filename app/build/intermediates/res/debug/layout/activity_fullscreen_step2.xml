<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    tools:context="com.example.android.effectivenavigation.ui.FullscreenStep2">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content_step2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center"
        android:text="@string/dummy_content_step2" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <VideoView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/videoView_step2" />

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="center_horizontal|top">

        <LinearLayout android:id="@+id/fullscreen_content_controls_step2"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent"
            android:weightSum="1">

        </LinearLayout>

        <Button android:id="@+id/dummy_button_step2"
            style="?metaButtonBarButtonStyle"
            android:layout_width="180dp"
            android:layout_height="182dp"
            android:rotation="270"
            android:text="@string/dummy_button_step1"
            android:layout_gravity="right|bottom" />

        ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_step2"
        android:src="@drawable/select_startbutton"
        android:background="@null"
        android:layout_above="@+id/button"
        android:rotation="270"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right|center_vertical" />

    </FrameLayout>

</FrameLayout>
